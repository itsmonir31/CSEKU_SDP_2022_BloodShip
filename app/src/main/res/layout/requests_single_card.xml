<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--    start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/secondary"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/reqDateTVA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="start"
                        android:text="Requested at 10:20AM, 12/02/22"
                        android:textSize="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/RemoveRequestA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="REMOVE"
                            android:textColor="#FF4D4D51"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_marginStart="7dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_remove"
                            app:tint="#4D4D51" />
                    </LinearLayout>


                </LinearLayout>
                <!--                <TextView-->
                <!--                    android:gravity="end"-->
                <!--                    android:id="@+id/reqDateTV"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="Text"-->
                <!--                    android:textStyle="bold"-->
                <!--                    android:textColor="#513C3C"-->
                <!--                    android:textSize="10sp" />-->

                <TextView
                    android:id="@+id/problemTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:textColor="@color/blueishText"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/bgTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:textColor="@color/blueishText"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/timeTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:textColor="@color/blueishText"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/dateTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:textColor="@color/blueishText"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/addressTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:textColor="@color/blueishText"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/quantityTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Requested: "
                    android:textColor="@color/blueishText"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_marginEnd="5dp"
                        android:paddingStart="10dp"
                        android:padding="5dp"
                        android:background="@drawable/need_more"
                        android:elevation="5dp"
                        android:layout_margin="10dp"
                        android:id="@+id/needMoreTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Need "
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_marginEnd="5dp"
                        android:paddingStart="10dp"
                        android:padding="5dp"
                        android:background="@drawable/managed_bg"
                        android:elevation="5dp"
                        android:layout_margin="10dp"
                        android:id="@+id/managedTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Managed by App: "
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="10sp" />
                </LinearLayout>





                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white" />

                <TextView
                    android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Numbers"
                android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="আবেদনকারীঃ "
                        android:textColor="@color/blueishText"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/a_contactTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:autoLink="phone"
                        android:textColor="#000"
                        android:textColorLink="@color/blueishText"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="আত্মীয়-স্বজনঃ "
                        android:textColor="@color/blueishText"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/r_contactTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:autoLink="phone"
                        android:textColor="#000"
                        android:textColorLink="@color/blueishText"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/copy_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:paddingEnd="15dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_copy" />


                    <Button
                        android:id="@+id/imInterested"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:text="I'm Interested"
                        android:textColor="@color/blueishText"
                        android:textSize="10sp" />


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <!--    end-->
</LinearLayout>